<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-12">
            <h1 class="text-primary">Quản lý tin nhắn</h1>
            <hr />
        </div>
    </div>

    <div class="row">
        <!-- Danh sách người dùng -->
        <div class="col-md-4">
            <div id="user-list" class="bg-white p-3 rounded shadow-sm">
                <h5 class="text-center text-secondary">Danh sách người dùng</h5>
                <hr>
                <div id="user-items">
                    <!-- Các user sẽ được thêm vào đây -->
                </div>
            </div>
        </div>

        <!-- Cửa sổ chat -->
        <div class="col-md-8">
            <div id="chat-container" class="bg-white rounded shadow-sm p-3 d-none">
                <div id="chat-header" class="d-flex align-items-center p-2 border-bottom">
                    <img id="chat-avatar" class="rounded-circle" width="40" height="40" src="/adminn/img/user-profile-icon-free-vector.jpg" alt="Avatar">
                    <h5 class="ml-3 mb-0" id="chat-username">Tên người dùng</h5>
                </div>
                <div id="chat-box" class="p-3">
                    <!-- Tin nhắn sẽ hiển thị ở đây -->
                </div>
                <div class="d-flex mt-2">
                    <input type="text" id="message-input" class="form-control" placeholder="Nhập tin nhắn..." />
                    <button class="btn btn-primary ml-2" onclick="sendMessage()">Gửi</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Cấu trúc danh sách user */
#user-list {
    max-height: 500px;
    overflow-y: auto;
    border-radius: 10px;
}

.user-item {
    display: flex;
    align-items: center;
    padding: 10px;
    cursor: pointer;
    border-radius: 5px;
    transition: background 0.3s;
}

.user-item:hover {
    background-color: #f0f0f0;
}

.user-avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    margin-right: 10px;
}

.user-info {
    flex-grow: 1;
}

.user-name {
    font-weight: bold;
}

.user-status {
    font-size: 12px;
    color: gray;
}

/* Giao diện cửa sổ chat */
#chat-container {
    border: 1px solid #ddd;
    border-radius: 10px;
    padding: 10px;
}

#chat-box {
    height: 400px;
    overflow-y: auto;
    border-radius: 10px;
    background: #f8f9fa;
    padding: 10px;
    display: flex;
    flex-direction: column;
}

/* Tin nhắn */
.message {
    display: flex;
    align-items: flex-start;
    margin-bottom: 10px;
    max-width: 80%;
}

.user-message {
    justify-content: flex-start;
}

    /* Tin nhắn của Admin sát mép phải */
    .admin-message {
        justify-content: flex-end;
        align-self: flex-end; /* Đẩy sát mép phải */
        text-align: right;
    }

/* Bóng tin nhắn */
.message-text {
    padding: 10px 15px;
    border-radius: 15px;
    word-wrap: break-word;
}

/* Tin nhắn của User */
.user-message .message-text {
    background-color: #e9ecef;
    color: black;
    border-top-left-radius: 0px;
}

/* Tin nhắn của Admin */
.admin-message .message-text {
    background-color: #007bff;
    color: white;
    border-top-right-radius: 0px;
}

/* Ẩn chat mặc định */
.d-none {
    display: none;
}
</style>

@section Scripts {
    <script src="~/adminn/js/chat.js"></script>
}
