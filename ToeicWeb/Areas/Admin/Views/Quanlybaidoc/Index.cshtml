@model IEnumerable<ToeicWeb.Models.Bai_tap_doc>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row pt-4 pb-3 mx-2">
        <div class="col-6">
            <h2 class="text-primary">
                Quản lý đề
            </h2>
        </div>
        <hr class="mx-3" style="width:98%" />
    </div>
    <div class="row pt-2 ms-2">
        <div class="col-6 col-md-3">
            <button type="button" class="btn btn-primary" data-toggle="modal" 
                                  data-target="#addBaitapdoc" onclick="addBaitapdoc()">
                <i class="bi bi-plus-circle"></i> Thêm đề mới
            </button>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table table-bordered" id="BtTable">
            <thead>
                <tr>
                    <th> @Html.DisplayNameFor(model => model.Id)</th>
                    <th> @Html.DisplayNameFor(model => model.Part)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Part)
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Xóa
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function addBaitapdoc(){
        $.ajax({
            type: "Get",
            url: "/Admin/Quanlybaidoc/Create",
            success: function (result) {
                $("#BtTable").html(result);
                $("#addBaitapdoc").modal('show');
            }
        });
       
    }
</script>