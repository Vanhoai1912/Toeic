                $('.nav-linkH[id="' + getActiveLinkId(path) + '"] .menu-link').addClass('active'); // Thêm lớp active vào phần tử <span class="menu-link">
            }

            // Hàm xác định id của liên kết active dựa trên URL
            function getActiveLinkId(path) {
                switch (path) {
                    case '/Admin/HomeAdmin/Index':
                        return 'homeLink';
                    case '/Admin/BTdoc/Index':
                        return 'btdocLink';
                    case '/Admin/BTnge/Index':
                        return 'btngeLink';
                    case '/Admin/Grammar/Index':
                        return 'gramLink';
                    case '/Admin/Voca/Index':
                        return 'vocaLink';
                    case '/Admin/User/Index':
