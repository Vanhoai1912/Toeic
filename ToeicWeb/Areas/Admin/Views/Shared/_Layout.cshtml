    <script>
        $(document).ready(function () {
            $('.nav-linkH').click(function (e) {
                e.preventDefault();
                const linkId = $(this).attr('id');
                let url = '';

                // Xác định URL dựa trên id của liên kết
                switch (linkId) {
                    case 'homeLink':
                        url = '/Admin/HomeAdmin/Index';
                        break;
                    case 'btdocLink':
                        url = '/Admin/BTdoc/Index';
                        break;
                    case 'btngeLink':
                        url = '/Admin/BTnge/Index';
                        break;
                    case 'customerLink':
                        window.location.href = '/Customer/Home/Index';
                        return;
                    case 'dethiLink':
                        url = '/Admin/BThi/Index';
                        break;
                    case 'vocaLink':
                        url = '/Admin/Voca/Index';
                        break;
                    case 'gramLink':
                        url = '/Admin/Grammar/Index';
                        break;
                    case 'userLink':
                        url = '/Admin/User/Index';
                        break;
                    default:
                        url = ''; // Thiết lập giá trị mặc định nếu không có id phù hợp
                }

                // Kiểm tra và gửi yêu cầu AJAX
                if (url !== '') {
                    $('#content').html('<div class="loader">Loading...</div>'); // Thêm spinner

                    $.ajax({
                        url: url,
                        type: 'GET',
                        success: function (data) {
                            console.log("Data received:", data); // Ghi lại phản hồi
                            var parsed = $(data).find('#content').html();
                            $('#content').html(parsed);

                            // Tải script tương ứng cho mỗi URL
                            loadScriptForUrl(url);

                            // Cập nhật lịch sử
                            window.history.pushState({ path: url }, '', url);

                            // Cập nhật lớp active cho menu
                            updateActiveMenuItem(this);
                        }.bind(this), // Bind để sử dụng `this` trong success
                        error: function () {
                            alert('Error while loading data.');
                        }
                    });
                }
            });

            // Sự kiện khi quay lại lịch sử
            window.onpopstate = function (event) {
                if (event.state) {
                    $.ajax({
                        url: event.state.path,
                        type: 'GET',
                        success: function (data) {
                            console.log("Data received on popstate:", data); // Ghi lại phản hồi
                            var parsed = $(data).find('#content').html();
                            $('#content').html(parsed);

                            // Cập nhật lớp active cho menu
                            updateActiveMenuItemOnPopstate(event.state.path);
                        },
                        error: function () {
                            alert('Error while loading data.');
                        }
                    });
                }
            };

            // Sự kiện cho nút quay lại
            $('#backLink').click(function (e) {
                e.preventDefault();
                history.back();
            });

            // Hàm xác định URL và tải script tương ứng
