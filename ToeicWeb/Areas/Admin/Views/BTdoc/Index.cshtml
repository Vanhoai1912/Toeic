@model ToeicWeb.Models.ViewModels.CauhoiBTdocVM

<div class="container">
    <div class="row pt-4 pb-3 mx-2">
        <div class="col-6">
            <h1 class="text-primary">
                Quản lý bài tập đọc
            </h1>
        </div>
        <hr class="mx-3" style="width:98%" />
    </div>

    <div class="row pt-2 ms-2">
        <div class="col-6 col-md-3">
            <button id="btnAdd" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm bài đọc mới
            </button>
        </div>
    </div>

    <div class="card-body p-4">
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-start">Id</th>
                    <th>TIÊU ĐỀ</th>
                    <th class="text-start">PART</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="BaitapdocModal">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modalTitle"></h3>
            </div>
            <div class="modal-body">
                <input type="hidden" asp-for="Id" value="0" />
                <div class="mb-2">
                    <label asp-for="Tieu_de" class="d-flex align-items-center fs-5 fw-semibold mb-2">
                        <span class="required">Tiêu đề</span>
                    </label>
                    <input asp-for="Tieu_de" class="form-control" required/>
                    <span asp-validation-for="Tieu_de"  class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Part" class="d-flex align-items-center fs-5 fw-semibold mb-2">
                        <span class="required">Part</span>
                    </label>
                    <select class="form-control" asp-for="Part" required>
                        <option disabled selected>--Chọn part--</option>
                        <option value="5">Part 5</option>
                        <option value="6">Part 6</option>
                        <option value="7">Part 7</option>
                    </select>
                    <span asp-validation-for="Part" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="ExcelFile" class="d-flex align-items-center fs-5 fw-semibold mb-2">
                        <span class="required">File Excel</span>
                    </label>
                    <input type="file" class="form-control" asp-for="ExcelFile" required />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal" onclick="HideModal();">Hủy</button>
                <button class="btn btn-primary" type="button" id="Save" onclick="Create();">Thêm</button>
                <button class="btn btn-success" type="button" id="Update" onclick="Update();" style="display:none">Cập nhật</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/adminn/js/mabtdoc.js"></script>
}