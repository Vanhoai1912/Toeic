@model Toeic.Models.ViewModels.ArticleVM

<div class="container">
    <div class="row pt-4 pb-3 mx-2">
        <div class="col-6">
            <h1 class="text-primary">
                Quản lý bài báo
            </h1>
        </div>
        <hr class="mx-3" style="width:98%" />
    </div>

    <div class="row pt-2 ms-2">
        <div class="col-6 col-md-3">
            <button id="btnAdd" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm bài báo mới
            </button>
        </div>
    </div>

    <div class="card-body p-4">
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-start">Id</th>
                    <th>TÊN BÀI</th>
                    <th>NGÀY TẠO</th>
                    <th>NGÀY CẬP NHẬT</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="ArticleModal" tabindex="-1" aria-labelledby="ArticleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modalTitle">Thêm bài báo</h3>
                <button type="button" onclick="HideModal();" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="Id" value="0" />

                <!-- Input cho tên bài -->
                <div class="mb-2">
                    <label for="Ten_bai" class="d-flex align-items-center fs-5 fw-semibold mb-2">
                        <span class="required">Tên bài</span>
                    </label>
                    <input type="text" id="Ten_bai" class="form-control" required />
                    <span id="Ten_baiError" class="text-danger"></span>
                </div>

                <!-- Input cho tên bài -->
                <div class="mb-2">
                    <label for="Description" class="d-flex align-items-center fs-5 fw-semibold mb-2">
                        <span class="required">Description</span>
                    </label>
                    <input type="text" id="Description" class="form-control" required />
                    <span id="DescriptionError" class="text-danger"></span>
                </div>

                <!-- Input cho file ảnh mã bài ngữ pháp -->
                <div class="mb-2">
                    <label for="NewImageFileArticle" class="d-flex align-items-center fs-5 fw-semibold mb-2">
                        <span class="required">Ảnh bài báo</span>
                    </label>
                    <div id="ImageFileArticleInfo" class="mb-2" style="display:none;">
                        <p>File hiện tại: <span id="ImageFileArticle"></span></p> <!-- Đây là nơi tên file sẽ được hiển thị -->
                    </div>
                    <input type="file" class="form-control" id="NewImageFileArticle" name="ImageFileArticle" accept="image/*" />
                    <span id="ImageFileArticleError" class="text-danger"></span>
                </div>


                <div class="mb-2">
                    <label for="Noi_dung" class="d-flex align-items-center fs-5 fw-semibold mb-2">
                        <span class="required">Nội dung</span>
                    </label>
                    <textarea type="text" id="Noi_dung" class="form-control" required></textarea>
                    <span id="Noi_dungError" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal" onclick="HideModal();">Hủy</button>
                <button class="btn btn-primary" type="button" id="Save" onclick="Create();">Thêm</button>
                <button class="btn btn-success" type="button" id="Update" onclick="Update();" style="display:none">Cập nhật</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/adminn/js/article.js"></script>
    <script>
        $(document).ready(function () {
            initTinyMCE();  // Gọi hàm khởi tạo TinyMCE
        });
    </script>
}
