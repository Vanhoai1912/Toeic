@model List<Ma_bai_tap_doc>

@for (int i = 0; i < Model.Count; i++)
{
    @if (@Model[i].Part == 7)
    {
        <a class="col-lg-3 col-sm-6 text-decoration-none" asp-area="Customer" asp-controller="Luyentap" asp-action="PracticePart7" asp-route-baiTapId="@Model[i].Id">
            <div class="col d-sm-flex justify-content-sm-center">
                <div class="col-8 p-1 border-primary mb-3 hV">
                    <div class="shadow border rounded bgC">
                        <div class="pb-0">
                            <div class="pl-1 m-2 mx-3 ">

                                <p class="text-dark mb-2"> <b>@Model[i].Tieu_de</b></p>

                                <p class="">
                                    <span class="badge rounded-pill bg-primary">
                                        2024 Format
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>

    }
}