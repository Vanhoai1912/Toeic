
<h3>Kết quả luyện tập:</h3>
<div class="container mt-5">
    <div class="row text-center">
        <!-- Correct Answer Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <i class="bi bi-check-circle-fill text-success card-icon fs-4"></i>
                    <h5 class="card-title text-success">Trả lời đúng</h5>
                    <p class="card-text fs-4">@ViewBag.CorrectAnswers</p>
                </div>
            </div>
        </div>
        <!-- Incorrect Answer Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <i class="bi bi-x-circle-fill text-danger card-icon fs-4"></i>
                    <h5 class="card-title text-danger">Trả lời sai</h5>
                    <p class="card-text fs-4">@ViewBag.IncorrectAnswers</p>
                </div>
            </div>
        </div>
        <!-- Skipped Question Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <i class="bi bi-dash-circle-fill card-icon fs-4"></i>
                    <h5 class="card-title">Bỏ qua</h5>
                    <p class="card-text fs-4">@ViewBag.SkippedQuestions</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="custom-container mt-xxl-5 d-xxl-flex">
    <h3 class="custom-text me-xl-3">Đáp án:</h3>
    @* <a asp-area="Customer" asp-controller="Luyentap" asp-action="ResultDetailPart5" class="btn btn-primary mb-3 text-light rounded-3">Xem chi tiết đáp án</a> *@
</div>
<a href="#" onclick="postData(@Model.BaiTapId); return false;" class="btn btn-primary mb-3 text-light rounded-3">Xem chi tiết đáp án</a>

<script>
    function postData(baiTapId) {
        fetch('/Customer/Luyentap/ResultDetailPart5', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
            },
            body: new URLSearchParams({
                baiTapId: baiTapId,
                questionIds: '1,2,3', // Replace with actual question IDs
                // Add other form data if necessary
            })
        })
        .then(response => response.text())
        .then(data => {
            // Handle the response data
            document.open();
            document.write(data);
            document.close();
        })
        .catch(error => console.error('Error:', error));
    }
</script>
