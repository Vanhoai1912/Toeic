@model List<Ma_bai_tu_vung>
<div class="container my-5">
    <div class="row text-center">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-md-2 my-4 m-3">
                <a asp-area="Customer" asp-controller="Voca" asp-action="VocabularyDetail" asp-route-mabaituvungId="@Model[i].Id" class="hover-effect text-decoration-none text-dark d-block">
                    <div class="circle-icon mb-2">
                        <img src="~/@Model[i].ImageUrl" alt="Vocabulary Image" class="img-fluid rounded" style="max-height: 120px; object-fit: cover;">
                    </div>
                    <h6 class="mt-3">@Model[i].Ten_bai</h6>
                </a>
            </div>

            @* Kiểm tra nếu đã đạt tới 5 phần tử để tạo một hàng mới *@
            @if ((i + 1) % 5 == 0 && i < Model.Count - 1)
            {
                <div class="w-100"></div> @* Break the row *@
            }
        }
    </div>
</div>


<style>
    .hover-effect {
        text-decoration: none;
        color: inherit;
        display: block; /* Để toàn bộ khối clickable */
        padding: 15px; /* Padding mặc định cho phần tử */
        transition: transform 0.3s ease; /* Hiệu ứng chuyển động cho transform */
    }

        .hover-effect:hover {
            background-color: #f0f0f0; /* Thêm nền sáng khi hover */
            height: 220px;
            border-radius: 10px;
            transform: scale(1.05); /* Phóng to phần tử khi hover */
        }

            .hover-effect:hover .circle-icon img {
                transform: scale(1.1); /* Phóng to ảnh khi hover */
                transition: transform 0.3s ease-in-out;
            }

    .circle-icon img {
        transition: transform 0.3s ease-in-out;
    }

    .circle-icon {
        display: flex;
        justify-content: center; /* Canh giữa hình ảnh */
    }

    h6 {
        margin-top: 15px; /* Đảm bảo khoảng cách giữa hình ảnh và chữ */
    }
</style>
