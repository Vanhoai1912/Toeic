<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] TOEIC</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/customer/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdn.datatables.net/2.1.4/css/dataTables.dataTables.min.css" />
<link href="~/customer/css/site.css" rel="stylesheet" />
</head>
<body>
   <header>
        @await Html.PartialAsync("_Navbar") <!-- Navbar -->
        @if (ViewData["NavbarType"] == "_NavbarBack")
        {
            @await Html.PartialAsync("_NavbarBack")
        }
        else if (ViewData["NavbarType"] == "_NavbarThoat")
        {
            @await Html.PartialAsync("_NavbarThoat")
        }
     
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div id="content">
                @RenderBody() <!-- Nội dung chính -->
            </div>
        </main>
    </div>

  

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@

    <script src="//cdn.datatables.net/2.1.4/js/dataTables.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @* <script src="~/js/site.js"></script>  *@
   <script src="~/customer/js/script.js"></script>
</body>
</html>
