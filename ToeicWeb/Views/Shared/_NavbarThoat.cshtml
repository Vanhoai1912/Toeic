<nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-5 bg-secondary">
    <div class="container-fluid">
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav me-auto">
                <li class="nav-item m-sm-2 fs-6 text-light d-sm-flex">
                    <a onclick="confirmSubmission()" class="nav-link">
                        <i class="bi bi-chevron-left pe-sm-3"></i>
                        <span class="mt-sm-1">Thoát</span>

                    </a>
